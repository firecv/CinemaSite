@{
    ViewData["Title"] = "Home Page";
}

@model CinemaSite.ViewModels.DatabaseViewModel

<div class="text-center">

    <div class="horizontal-scroll">
        @if (Model != null) {
            @foreach (var item in Model.Articles)
            {
                var articleImage = $"/Content/img{item.image_id}.jpg";

                <article>
                    <h3>@item.title</h3>
                    <img src="@articleImage" alt="Zdjęcie dla artykułu o tytule: @item.title" />
                    <p>@item.content</p>
                </article>
            }
        }
    </div>
    <div class="horizontal-scroll">
        @if (Model != null)
        {
            @foreach (var item in Model.Movies)
            {
                var posterImage = $"/Content/img{item.poster_id}.jpg";

                <article>
                    <h3>@item.title</h3>
                    <img src="@posterImage" alt="Plakat dla @item.title" />
                </article>
            }
        }
    </div>
</div>

