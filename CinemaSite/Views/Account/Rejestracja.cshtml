@{
    ViewData["Title"] = "Rejestracja";
}

@model CinemaSite.ViewModels.AccountViewModel

@section Styles {
    <link rel="stylesheet" href="~/css/login.css" />
}

<div class="overcontainer">
    <h1 class="page-title">REJESTRACJA</h1>

    <div class="form-container">
        <form class="user-form" asp-action="NowyUzytkownik" method="post">
            <input class="form-field" asp-for="username" id="username" placeholder="Nazwa uzytkownika" />
            <input class="form-field" asp-for="email" id="email" placeholder="Adres e-mail" />
            <input class="form-field" asp-for="phone" id="phone" placeholder="Numer telefonu" />
            <input class="form-field" asp-for="password_unhashed" id="password" type="password" placeholder="Hasło" />
            <input class="form-field" asp-for="repeat_password_unhashed" id="repeat-password" type="password" placeholder="Powtórz hasło" />
            <button class="form-button" id="submit-button" type="submit">Zarejestruj się</button>
        </form>
        <p class="error-text" id="error-message">AAA</p>
    </div>
</div>

@section Scripts {
    <script src="~/js/detail-validation.js" asp-append-version="true" defer></script>
}