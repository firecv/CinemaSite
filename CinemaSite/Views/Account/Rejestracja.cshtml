@{
    ViewData["Title"] = "Rejestracja";
}

@model CinemaSite.ViewModels.AccountViewModel

<div>
    <form asp-action="NowyUzytkownik" method="post">
        <input asp-for="username" placeholder="Nazwa Uzytkownika" />
        <input asp-for="email" placeholder="Adres e-mail" />
        <input asp-for="phone" placeholder="Numer telefonu" />
        <input asp-for="password_unhashed" id="password" type="password" placeholder="Hasło" />
        <input asp-for="repeat_password_unhashed" id="repeat-password" type="password" placeholder="Powtórz Hasło" />
        <button id="submit-button" type="submit">Zarejestruj</button>
    </form>
</div>