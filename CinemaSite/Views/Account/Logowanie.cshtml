@{
    ViewData["Title"] = "Logowanie";
}

@model CinemaSite.ViewModels.AccountViewModel

@section Styles {
    <link rel="stylesheet" href="~/css/login.css" />
}

<div class="form-container">
    <form class="user-form" asp-action="KontoLogowanie" method="post">
        <input class="form-field" asp-for="email" id="email" placeholder="Adres e-mail" />
        <input class="form-field" asp-for="password_unhashed" id="password" type="password" placeholder="Hasło" />
        <button class="form-button" id="submit-button" type="submit">Login</button>
    </form>
</div>